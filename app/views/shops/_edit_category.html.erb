<%= f.label :name, "category" %>
<%= f.text_field :name %>
<%= f.fields_for :dishes do |dishf| %>
  <p>
    <%= dishf.text_field :name %>
    <%= dishf.number_field :bprice,  :maxlength => 4, :size => 6 %>
  </p>
<% end %>

<% if false %>

<% @shop.categories.each do |category| %>
  <ul> <%= category.name %>
    <% category.dishes.each do |dish| %>
      <li> <%= dish.name%> <%= dish.bprice %> <ul> 
        <% if true %>
          <% dish.questions.each do |question| %>
            <li> <%= question.desc %>  <ul>
              <% question.options.each do |option| %>
                <li> <%= "#{option.desc} - #{option.price}"  %>  </li>
              <% end %>
            </ul></li>
          <% end %>
        <% end %>
      </li></ul> 
    <% end %>
  </ul>
<% end %>
<% end %>
