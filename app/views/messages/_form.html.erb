<%= form_for( @message) do |f| %>
  <div class="field">
    <%= f.label :to %> <br />
		<%= f.text_field :to %>
  </div>
  <div class="field">
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body,:size=>"40x10" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
